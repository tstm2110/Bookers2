
 <% if book_image.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorites_path(book_image.id), method: :delete, remote: true do %>
        ♥<%= book_image.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorites_path(book_image.id), method: :post, remote: true do %>
        ♡<%= book_image.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
